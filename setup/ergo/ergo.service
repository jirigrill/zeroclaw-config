[Unit]
Description=Ergo IRC Server
After=network.target

[Service]
Type=simple
WorkingDirectory=/etc/ergo
ExecStart=/usr/local/bin/ergo run --conf /etc/ergo/ircd.conf
Restart=on-failure
RestartSec=5

# Hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ReadWritePaths=/var/lib/ergo /etc/ergo

[Install]
WantedBy=multi-user.target
